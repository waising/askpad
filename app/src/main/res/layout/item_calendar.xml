<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:layout_marginBottom="@dimen/space_3"
              android:layout_marginLeft="@dimen/space_3"
              android:background="@drawable/bg_corners_white3"
              android:gravity="center"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/space_10"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_sigin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/ic_calen_sigin"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="@dimen/space_60"
            android:layout_height="@dimen/space_60"
            android:layout_gravity="center"
            android:background="@drawable/cir_calen_item_bg"
            android:gravity="center"
            android:textColor="#c56607"
            android:textSize="@dimen/space_30"/>

        <TextView
            android:id="@+id/tv_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:textColor="#ebb57f"
            android:textSize="@dimen/space_16"/>
    </FrameLayout>
</LinearLayout>