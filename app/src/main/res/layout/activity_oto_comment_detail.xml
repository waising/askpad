<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorTest_f8"
              android:orientation="vertical">

    <include layout="@layout/common_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/space_10"
        android:background="@mipmap/bg_oto_end"
        android:orientation="horizontal">

        <include
            layout="@layout/layout_oto_bill"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/space_20"
                android:layout_marginLeft="@dimen/space_5"
                android:layout_marginRight="@dimen/space_20"
                android:layout_marginTop="@dimen/space_60"
                android:layout_weight="1"
                android:background="@mipmap/bg_oto_end_pager"
                android:orientation="vertical"
                android:paddingBottom="@dimen/space_20"
                android:paddingLeft="@dimen/space_20"
                android:paddingRight="@dimen/space_20"
                android:paddingTop="@dimen/space_80">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_tea_name"
                        style="@style/tv_oto_end_styles1"/>

                    <TextView
                        android:id="@+id/tv_tea_code"
                        style="@style/tv_oto_end_styles1"
                        android:layout_marginLeft="@dimen/space_10"
                        android:textColor="@color/colorText_88"
                        android:textSize="@dimen/textSize_16"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_10"
                    android:layout_marginTop="@dimen/space_10"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/tv_oto_end_styles2"
                        android:layout_width="0dp"
                        android:layout_marginRight="@dimen/space_10"
                        android:layout_weight="1"
                        android:text="优先答疑"
                        android:textColor="@color/colorText_56"/>

                    <CheckBox
                        android:id="@+id/cb_favor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/oto_favor_end"
                        android:button="@null"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/tv_oto_end_styles2"
                        android:layout_width="0dp"
                        android:layout_marginRight="@dimen/space_10"
                        android:layout_weight="1"
                        android:text="@string/oto_end_t4"/>

                    <TextView
                        android:id="@+id/tv_reward"
                        style="@style/btn_comm_or_style"
                        android:text="1个"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_askcoin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/space_8"
                    android:layout_marginTop="@dimen/space_14"
                    android:orientation="vertical"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/tv_oto_end_styles2"
                        android:layout_marginRight="@dimen/space_10"
                        android:text="评价老师"/>

                    <include layout="@layout/layout_line"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_10"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/space_10"
                        android:text="满意度"
                        android:textColor="@color/colorText_88"
                        android:textSize="@dimen/textSize_16"/>

                    <com.asking.pad.app.widget.StarView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/start_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:mClickImageId="@mipmap/oto_grade_yes"
                        app:mDefaultImageId="@mipmap/oto_grade_no"
                        app:mImageHeight="30dp"
                        app:mImageWidth="30dp"
                        app:mMargin="2dp"
                        app:mStarNum="5"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_stu_evaluate"
                    style="@style/tv_oto_end_styles3"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/tv_oto_end_styles2"
                        android:layout_marginRight="@dimen/space_10"
                        android:text="老师点评"/>

                    <include layout="@layout/layout_line"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_tea_evaluate"
                    style="@style/tv_oto_end_styles3"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/user_img_iv"
                android:layout_width="@dimen/space_100"
                android:layout_height="@dimen/space_100"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:src="@mipmap/ic_tea_img"/>

        </FrameLayout>
    </LinearLayout>

</LinearLayout>