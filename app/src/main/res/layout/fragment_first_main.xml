<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50"
        android:background="@color/login_gomain"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/space_10"
        android:paddingTop="@dimen/space_10">

        <View
            style="@style/view_size_left_right_style"/>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/space_20"
                android:layout_marginTop="@dimen/space_20"
                android:layout_weight="1"
                android:gravity="bottom">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_corners_white"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/space_10"
                    android:paddingLeft="@dimen/space_35"
                    android:paddingRight="@dimen/space_55"
                    android:paddingTop="@dimen/space_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/main_t4"
                        android:textColor="@color/colorText_88"
                        android:textSize="@dimen/textSize_18"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/space_10"
                        android:overScrollMode="never"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_video"
                    style="@style/iv_first_main_foot_style"
                    android:src="@mipmap/ic_main_class_video"/>

                <ImageView
                    android:id="@+id/iv_oto"
                    style="@style/iv_first_main_foot_style"
                    android:src="@mipmap/ic_main_oto"/>

            </LinearLayout>
        </LinearLayout>

        <View
            style="@style/view_size_left_right_style"/>

    </LinearLayout>
</LinearLayout>