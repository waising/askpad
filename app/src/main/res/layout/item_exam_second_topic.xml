<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_5"
        android:layout_marginRight="@dimen/space_5"
        app:cardCornerRadius="@dimen/space_10"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <com.asking.pad.app.widget.MultiStateView
                android:id="@+id/load_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:msv_emptyView="@layout/state_empty"
                app:msv_errorView="@layout/state_error"
                app:msv_loadingView="@layout/state_loading"
                app:msv_viewState="content">

                <com.asking.pad.app.widget.AskMathWebView
                    android:id="@+id/tit_webview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_16"/>
            </com.asking.pad.app.widget.MultiStateView>

            <include
                layout="@layout/layout_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_0.3"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/cb_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableLeft="@drawable/supertutorial_speaker_detail_icon_bg"
                    android:drawablePadding="@dimen/space_10"
                    android:gravity="center"
                    android:padding="@dimen/space_8"
                    android:text="查看解析"
                    android:textColor="@drawable/supertutorial_speaker_detail_text_bg"
                    android:textSize="@dimen/textSize_14"/>
            </LinearLayout>


            <net.cachapa.expandablelayout.ExpandableLayout
                android:id="@+id/el_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                app:el_duration="300"
                app:el_expanded="true"
                app:el_translate_children="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_exam_second_tri"/>


                    <com.asking.pad.app.widget.MultiStateView
                        android:id="@+id/answer_load_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FDF5E4"
                        app:msv_emptyView="@layout/state_empty"
                        app:msv_errorView="@layout/state_error"
                        app:msv_loadingView="@layout/state_loading"
                        app:msv_viewState="content">

                        <com.asking.pad.app.widget.AskMathView
                            android:id="@+id/web_answer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/space_16"/>
                    </com.asking.pad.app.widget.MultiStateView>
                </LinearLayout>
            </net.cachapa.expandablelayout.ExpandableLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.v4.widget.NestedScrollView>