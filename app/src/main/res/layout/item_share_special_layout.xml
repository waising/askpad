<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="@dimen/space_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="@dimen/space_40"
                android:layout_height="@dimen/space_40"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_weight="1"
                android:text="丸子老师"
                android:textColor="@color/colorText_88"
                android:textSize="@dimen/textSize_14"/>

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/red"
                android:textSize="@dimen/textSize_14"/>

        </LinearLayout>

        <include layout="@layout/layout_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_10"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.asking.pad.app.widget.FoursquareImgeView
                    android:id="@+id/iv_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_10"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_already_evaluated"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="right"
                    android:orientation="vertical"
                    android:padding="@dimen/space_10">

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:shadowColor="#c3c3c3"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="2"
                        android:text="初中数学暑假学习攻略"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize_20"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_20"
                        android:text="初中数学暑假学习攻略"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize_14"/>

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_20"
                        android:text="初中数学暑假学习攻略"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize_12"/>

                </LinearLayout>
            </FrameLayout>

            <TextView
                android:id="@+id/tv_gread"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                android:text="七年级"
                android:textColor="@color/login_gomain"
                android:textSize="@dimen/textSize_18"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_visitnum"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="游览123"
                    android:textColor="@color/colorText_88"
                    android:textSize="@dimen/textSize_18"/>

                <TextView
                    android:id="@+id/tv_commnum"
                    style="@style/tv_share_ques_styles"
                    android:drawableLeft="@mipmap/ic_share_ques_c"
                    android:text="123"/>

                <TextView
                    android:id="@+id/tv_likenum"
                    style="@style/tv_share_ques_styles"
                    android:drawableLeft="@mipmap/ic_share_ques_f"
                    android:text="103"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>