<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/app_bg"
    android:gravity="center">

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="429dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:src="@mipmap/login_bg_1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_10"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/textview_register_styles"
                        android:layout_width="wrap_content"
                        android:text="手机"/>

                    <EditText
                        android:id="@+id/et_phone"
                        style="@style/edittext_register_styles"
                        android:layout_width="match_parent"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/textview_register_styles"
                        android:layout_width="wrap_content"
                        android:text="密码"/>

                    <EditText
                        android:id="@+id/et_password"
                        style="@style/edittext_register_styles"
                        android:layout_width="match_parent"
                        android:inputType="textPassword"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/forget_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/space_7"
                    android:text="忘记密码?"
                    android:textColor="@color/theme_blue_theme"
                    android:textSize="@dimen/textSize_16"/>

                <Button
                    android:id="@+id/btn_login"
                    style="@style/btn_comm_styles"
                    android:layout_marginBottom="@dimen/space_10"
                    android:layout_marginTop="@dimen/space_10"
                    android:text="@string/app_login"/>

                <Button
                    android:id="@+id/btn_register"
                    style="@style/btn_register_styles"
                    android:layout_marginBottom="@dimen/space_10"
                    android:layout_marginTop="@dimen/space_10"
                    android:text="还没有账号，免费注册"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
