<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTest_f8"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/space_10"
        android:layout_marginLeft="@dimen/space_24"
        android:layout_marginRight="@dimen/space_24"
        android:layout_marginTop="@dimen/space_18"
        android:background="@drawable/bg_corners_white3"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/space_48"
            android:drawablePadding="@dimen/space_20"
            android:drawableTop="@mipmap/ic_launcher"
            android:gravity="center_horizontal"
            android:text="阿思可在线"
            android:textColor="@color/colorText_56"
            android:textSize="@dimen/space_24" />


        <TextView
            android:id="@+id/vesion_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/space_24"
            android:gravity="center_horizontal"
            android:text="v1.2.0"
            android:textColor="@color/colorText_88"
            android:textSize="@dimen/space_18" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="福建阿思可网络教育有限公司版权所有    闽ICP备15000254号"
            android:textColor="@color/colorText_88"
            android:textSize="@dimen/space_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/space_32"
            android:layout_marginTop="@dimen/space_32"
            android:text="Copyright©2017 Asking.Inc,All Right Reserved."
            android:textColor="@color/colorText_c7"
            android:textSize="@dimen/space_16" />

    </LinearLayout>

</LinearLayout>