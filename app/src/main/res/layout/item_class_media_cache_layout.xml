<?xml version="1.0" encoding="utf-8"?>
<com.asking.pad.app.widget.FoursquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="@dimen/space_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="154dp"
                android:layout_height="102dp"
                android:layout_marginBottom="@dimen/space_10"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginTop="@dimen/space_10"
                android:background="@drawable/bg_corners_stroke4"
                android:padding="@dimen/space_1">

                <ImageView
                    android:id="@+id/iv_temp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/trans_black">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/ic_media_cache"/>
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_10"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_10"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/colorText_56"
                        android:textSize="@dimen/textSize_20"/>

                    <ImageView
                        android:id="@+id/iv_delect"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/space_15"
                        android:paddingRight="@dimen/space_15"
                        android:src="@mipmap/ic_class_media_cache_delect"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fl_progress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/space_10"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_10"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_progress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:textColor="@color/colorText_88"
                            android:textSize="@dimen/textSize_12"/>

                        <TextView
                            android:id="@+id/tv_down"
                            style="@style/btn_or_blue_style"
                            android:layout_gravity="right"
                            android:background="@drawable/bg_corners_green"
                            android:text="点击下载"/>
                    </FrameLayout>

                    <ProgressBar
                        android:id="@+id/bar_progress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_8"
                        android:layout_marginTop="@dimen/space_5"
                        android:background="@drawable/bg_progress_horizontal"
                        android:indeterminateOnly="false"
                        android:max="100"
                        android:progress="50"
                        android:progressDrawable="@drawable/progress_horizontal_green"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</com.asking.pad.app.widget.FoursquareRelativeLayout>