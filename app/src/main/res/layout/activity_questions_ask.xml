<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include layout="@layout/common_toolbar"/>
    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="@dimen/space_20"
        android:layout_marginTop="@dimen/space_20"
        android:paddingRight="@dimen/space_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/ic_specical_tit_flag"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="我要提问"
            android:layout_marginLeft="@dimen/space_4"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/textSize_18"
            android:textColor="@color/colorText_88"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/space_20"
        android:layout_marginLeft="@dimen/space_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/camera_iv"
            android:layout_gravity="center_vertical"
            android:maxWidth="@dimen/space_100"
            android:maxHeight="@dimen/space_100"
            android:src="@mipmap/question_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginTop="@dimen/space_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/qustion_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="问题标题"
                    android:layout_marginLeft="@dimen/space_6"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/textSize_18"
                    android:textColor="@color/colorText_88"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/question_title_et"
                    android:paddingLeft="@dimen/space_5"
                    android:paddingRight="@dimen/space_5"
                    android:layout_marginLeft="@dimen/space_10"
                    android:background="@drawable/bg_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/space_20"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/qustion_point"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="问题补充"
                    android:layout_marginLeft="@dimen/space_6"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/textSize_18"
                    android:textColor="@color/colorText_88"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/question_content_et"
                    android:lines="5"
                    android:padding="@dimen/space_5"
                    android:gravity="left|top"
                    android:maxLength="500"
                    android:layout_marginLeft="@dimen/space_10"
                    android:background="@drawable/bg_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/space_20"
        android:layout_marginLeft="@dimen/space_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@mipmap/question_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="科目:"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/textSize_18"
            android:textColor="@color/colorText_88"
            android:layout_marginLeft="@dimen/space_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_subject"
            android:layout_marginLeft="@dimen/space_22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:overScrollMode="never"/>

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/space_20"
        android:layout_marginLeft="@dimen/space_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@mipmap/question_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="年级:"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/textSize_18"
            android:textColor="@color/colorText_88"
            android:layout_marginLeft="@dimen/space_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_grade"
            android:layout_marginLeft="@dimen/space_22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:overScrollMode="never"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/space_20"
        android:paddingLeft="@dimen/space_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="悬赏:"
            android:textSize="@dimen/textSize_18"
            android:textColor="@color/colorText_88"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/question_caifu_et"
            android:textColor="@color/orange"
            android:textSize="@dimen/textSize_18"
            android:inputType="number"
            android:text="0"
            android:layout_marginLeft="@dimen/space_20"
            android:background="@drawable/bg_edit"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:width="@dimen/space_60"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/caifu_info_tv"
            android:layout_marginLeft="@dimen/space_46"
            android:text="@string/aq_ask_caifu_info"
            android:textSize="@dimen/textSize_18"
            android:textColor="@color/colorText_88"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/question_ask_btn"
        android:layout_marginTop="@dimen/space_50"
        android:text="提交"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_25"
        android:background="@drawable/btn_blue_normal"
        android:layout_width="wrap_content"
        android:width="@dimen/space_100"
        android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>