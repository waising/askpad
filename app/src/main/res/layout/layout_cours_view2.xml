<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/space_14"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_14"
        android:layout_marginLeft="@dimen/space_10"
        android:text="@string/selectsubjects"
        android:textColor="@color/colorText_88"
        android:textSize="@dimen/textSize_14"/>

    <com.asking.pad.app.widget.NoScrollGridView
        android:id="@+id/course_view"
        style="@style/NoScrollGrid_style"
        android:columnWidth="100dp"
        android:numColumns="auto_fit"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/space_0.3"
        android:background="#d9d9d9"/>
</LinearLayout>