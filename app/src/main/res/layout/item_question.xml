<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardCornerRadius="5dp"
    app:cardElevation="@dimen/space_5"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/question_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/space_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/question_status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/user_img_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="@dimen/space_8"
                android:layout_marginTop="12.3dp"
                android:clickable="true"/>

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15.3dp"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="15.3dp"
                android:layout_toRightOf="@+id/user_img_iv"
                android:text="用户名"
                android:textColor="@color/colorText_89"
                android:textSize="@dimen/textSize_16"/>

            <ImageView
                android:id="@+id/question_sure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/space_10"
                android:layout_marginTop="@dimen/space_10"
                android:layout_toLeftOf="@+id/ask_ic"
                android:src="@mipmap/question_sure"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/ask_ic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/space_10"
                android:layout_toLeftOf="@+id/ask_money_tv"
                android:src="@mipmap/quest_ask_money"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/ask_money_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="5"
                android:textColor="@color/orange"
                android:textSize="@dimen/textSize_16"
                android:visibility="invisible"/>

        </RelativeLayout>

        <include
            layout="@layout/layout_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"
            android:layout_marginTop="@dimen/space_10"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_5"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/question_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="@color/colorText_88"
                android:textSize="@dimen/textSize_16"/>

            <include
                android:id="@+id/mathView"
                layout="@layout/common_math"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="@dimen/space_10"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <TextView
                android:id="@+id/km_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="@dimen/space_80"
                android:text="科目"
                android:textColor="@color/theme_blue_theme"
                android:textSize="@dimen/textSize_14"/>

            <TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_toRightOf="@+id/km_tv"
                android:textColor="@color/colorText_ae"
                android:textSize="@dimen/textSize_12"/>

            <TextView
                android:id="@+id/ask_question_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/textSize_14"/>
        </RelativeLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>