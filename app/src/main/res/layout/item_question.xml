<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/question_ll"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--<android.support.v7.widget.CardView-->
        <!--android:id="@+id/cardView"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_gravity="center"-->
        <!--app:cardCornerRadius="10dp"-->
        <!--app:cardElevation="@dimen/space_5"-->
        <!--app:cardUseCompatPadding="true">-->
        <ImageView
            android:layout_gravity="right"
            android:src="@mipmap/question_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_marginTop="-35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.asking.pad.app.widget.AskSimpleDraweeView
                android:id="@+id/user_img_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="@dimen/space_8"
                app:backgroundImage="@color/main_bg"
                app:roundAsCircle="true"
                android:layout_marginTop="12.3dp"
                android:layout_marginLeft="12dp"
                android:clickable="true"/>

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15.3dp"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="15.3dp"

                android:layout_toRightOf="@+id/user_img_iv"
                android:text="用户名"
                android:textColor="@color/colorText_89"
                android:textSize="@dimen/textSize_16" />

            <ImageView
                android:id="@+id/ask_ic"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:src="@mipmap/quest_ask_money"/>
            <TextView
                android:id="@+id/ask_money_tv"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="@dimen/textSize_16"
                android:textColor="@color/orange"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/question_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="@dimen/textSize_16"
                android:textColor="@color/orange"/>

            <!--<ImageView-->
                <!--android:id="@+id/question_img_iv"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content" />-->

            <include
                android:id="@+id/mathView"
                layout="@layout/common_math"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"/>
        </LinearLayout>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/km_tv"
               android:width="@dimen/space_80"
               android:text="科目"
               android:textColor="@color/theme_blue_theme"
               android:textSize="@dimen/textSize_14"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <TextView
               android:id="@+id/time_tv"
               android:layout_toRightOf="@+id/km_tv"
               android:textColor="@color/colorText_ae"
               android:textSize="@dimen/textSize_12"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />

           <TextView
               android:id="@+id/ask_question_count"
               android:layout_alignParentRight="true"
               android:textSize="@dimen/textSize_14"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
       </RelativeLayout>

        <!--</android.support.v7.widget.CardView>-->
</LinearLayout>