<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="@dimen/space_5">

        <LinearLayout
            android:id="@+id/ll_modify_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/space_32"
            android:paddingLeft="@dimen/space_44"
            android:paddingRight="@dimen/space_44"
            android:paddingTop="@dimen/space_42">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="原  密  码："
                    android:textColor="@color/colorText_88"
                    android:textSize="@dimen/space_16" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edt_original_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_20"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:inputType="textPassword"
                        android:paddingRight="@dimen/space_10"
                        android:maxLength="20"
                        android:text=""
                        android:textColor="@color/colorText_88"
                        android:textSize="@dimen/space_16" />

                    <View style="@style/view_horizontal_line" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_40"
                android:orientation="horizontal">


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="新  密  码："
                    android:textColor="@color/colorText_88"
                    android:textSize="@dimen/space_16" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edt_new_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_20"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:inputType="textPassword"
                        android:paddingRight="@dimen/space_10"
                        android:maxLength="20"
                        android:text=""
                        android:textColor="@color/colorText_88"
                        android:textSize="@dimen/space_16" />

                    <View style="@style/view_horizontal_line" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_40"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="确认密码："
                    android:textColor="@color/colorText_88"
                    android:textSize="@dimen/space_16" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edt_confirm_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_20"
                        android:width="@dimen/space_110"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:inputType="textPassword"
                        android:paddingRight="@dimen/space_10"
                        android:text=""
                        android:maxLength="20"
                        android:textColor="@color/colorText_88"
                        android:textSize="@dimen/space_16"

                        />

                    <View style="@style/view_horizontal_line" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_34"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_cancle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_solid_corner_gray"
                    android:gravity="center_horizontal"
                    android:paddingBottom="@dimen/space_12"
                    android:paddingTop="@dimen/space_12"
                    android:text="取消"
                    android:textColor="@color/white"
                    android:textSize="@dimen/space_16" />

                <TextView
                    android:id="@+id/tv_save"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_18"
                    android:layout_weight="1"
                    android:background="@drawable/bg_solid_corner_blue"
                    android:gravity="center_horizontal"
                    android:paddingBottom="@dimen/space_12"
                    android:paddingTop="@dimen/space_12"
                    android:text="保存"
                    android:textColor="@color/white"
                    android:textSize="@dimen/space_16" />


            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:elevation="@dimen/space_5"
        android:src="@mipmap/ic_close" />

</RelativeLayout>