<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorTest_f8"
              android:orientation="vertical"
              android:padding="@dimen/space_20">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/space_20">

                <TextView
                    style="@style/tv_pay_styles"
                    android:text="@string/pay_study_km"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_subject"
                    style="@style/recview_pay_styles"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/space_20">

                <TextView
                    style="@style/tv_pay_styles"
                    android:text="@string/pay_study_time"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_timelimit"
                    style="@style/recview_pay_styles"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/space_20">


                <TextView
                    style="@style/tv_pay_styles"
                    android:text="@string/pay_study_class"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_grade"
                    style="@style/recview_pay_styles"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/layout_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/space_20"
        android:paddingRight="@dimen/space_20"
        android:paddingTop="@dimen/space_20">

        <TextView
            style="@style/tv_pay_styles"
            android:text="应付金额："/>

        <TextView
            android:id="@+id/tv_pay_price"
            style="@style/tv_pay_styles"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_weight="1"
            android:textColor="#ffbf73"/>

        <TextView
            android:id="@+id/tv_add_shopcart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_12"
            android:background="@drawable/bg_solid_orange"
            android:paddingBottom="@dimen/space_13"
            android:paddingLeft="@dimen/space_20"
            android:paddingRight="@dimen/space_20"
            android:paddingTop="@dimen/space_13"
            android:text="加入购物车"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_18"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/btn_pay"
            style="@style/btn_cuserinfo_styles"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/btn_red_normal"
            android:text="立即购买"/>
    </LinearLayout>
</LinearLayout>