<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <include layout="@layout/common_toolbar"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/space_10"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20"
        android:layout_marginTop="@dimen/space_10"
        android:gravity="center"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/space_10">


            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/space_2"
                android:layout_weight="3"
                android:src="@mipmap/onlineqa_ask_pic_bg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/space_2"
                android:layout_marginLeft="@dimen/space_8"
                android:layout_weight="7"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_subject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/space_8"
                    android:layout_marginTop="@dimen/space_14"
                    android:orientation="vertical"/>

                <LinearLayout
                    android:id="@+id/ll_grade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/space_8"
                    android:layout_marginTop="@dimen/space_14"
                    android:orientation="vertical"/>


                <LinearLayout
                    android:id="@+id/ll_askcoin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/space_8"
                    android:layout_marginTop="@dimen/space_14"
                    android:orientation="vertical"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_submit"
                style="@style/btn_comm_styles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_8"
                android:paddingLeft="@dimen/space_30"
                android:paddingRight="@dimen/space_30"
                android:text="@string/app_oto_ask"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>