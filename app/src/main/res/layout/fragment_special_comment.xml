<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/ic_specical_tit_flag1"
            android:drawablePadding="@dimen/space_5"
            android:gravity="center_vertical"
            android:text="讨论区"
            android:textColor="@color/colorText_88"
            android:textSize="@dimen/textSize_18"/>

        <TextView
            android:id="@+id/tv_myself"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_20"
            android:text="只看自己"
            android:textColor="@color/colorText_88"
            android:textSize="@dimen/textSize_18"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.asking.pad.app.widget.MultiStateView
            android:id="@+id/load_comment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:msv_emptyView="@layout/state_empty"
            app:msv_errorView="@layout/state_error"
            app:msv_loadingView="@layout/state_loading"
            app:msv_viewState="content">

            <com.asking.pad.app.widget.WebViewScroll
                android:id="@+id/webview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.asking.pad.app.widget.MultiStateView>

        <include layout="@layout/layout_special_comment_foot"/>
    </RelativeLayout>

</LinearLayout>