<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical"
              android:paddingBottom="@dimen/space_100">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/oto_waiting_tip_bg"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/oto_waiting_t1"
        android:textColor="@color/colorText_88"
        android:textSize="@dimen/textSize_16"/>

    <FrameLayout
        android:id="@+id/ll_out_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_10"
            android:text="@string/oto_waiting_tip2"
            android:textColor="@color/colorText_88"
            android:textSize="@dimen/textSize_14"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/bg_oto_out_time"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/space_30">

            <TextView
                android:id="@+id/tv_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/oto_waiting_tip3"
                android:textColor="@color/login_gomain"
                android:textSize="@dimen/textSize_14"/>

            <TextView
                android:id="@+id/tv_qustion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_30"
                android:text="@string/oto_waiting_tip4"
                android:textColor="@color/login_gomain"
                android:textSize="@dimen/textSize_14"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_30"
                android:text="@string/oto_waiting_tip5"
                android:textColor="@color/login_gomain"
                android:textSize="@dimen/textSize_14"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>