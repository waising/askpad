<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   android:id="@+id/toolBar"
                                   android:layout_width="match_parent"
                                   android:layout_height="@dimen/space_50"
                                   android:background="?attr/asking91Theme"
                                   android:elevation="@null"
                                   android:minHeight="@dimen/space_50"
                                   android:orientation="vertical"
                                   android:theme="@style/Custom.Theme.ToolBar"
                                   app:contentInsetStartWithNavigation="0dp"
                                   app:maxButtonHeight="@dimen/space_50"
                                   app:navigationIcon="?attr/navBackIcon"
                                   app:popupTheme="@style/Theme.ToolBar.Base"
                                   app:title="@string/app_name"
                                   app:titleTextAppearance="@style/toolbar_textAppearance"
                                   app:titleTextColor="?attr/asking91ToolbarText"
                                   tools:targetApi="lollipop">

    <RelativeLayout
        android:id="@+id/user_info_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_8">

            <LinearLayout
                android:id="@+id/title_click"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/user_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="?attr/asking91ToolbarText"
                    android:textSize="@dimen/textSize_30"
                    tools:text="@string/app_name"/>

                <ImageView
                    android:id="@+id/title_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:src="@mipmap/title_more"
                    android:visibility="gone"/>
            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.Toolbar>