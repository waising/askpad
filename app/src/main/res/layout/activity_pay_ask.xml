<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTest_f8"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_50"
            android:background="?attr/asking91Theme"
            android:elevation="@null"
            android:minHeight="@dimen/space_50"
            android:orientation="vertical"
            android:theme="@style/Custom.Theme.ToolBar"
            app:contentInsetStartWithNavigation="0dp"
            app:maxButtonHeight="@dimen/space_50"
            app:popupTheme="@style/Theme.ToolBar.Base"
            app:title="@string/app_name"
            app:titleTextAppearance="@style/toolbar_textAppearance"
            app:titleTextColor="?attr/asking91ToolbarText"
            tools:targetApi="lollipop">

            <TextView
                android:id="@+id/tv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_10"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/space_30"
                android:drawableLeft="@mipmap/ic_shopcart"
                android:drawablePadding="@dimen/space_12"
                android:text="购物车"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_16" />

        </android.support.v7.widget.Toolbar>

    </LinearLayout>


    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/space_30"
        app:cardCornerRadius="10dp"
        app:cardElevation="@dimen/space_5"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/space_20">


            <com.asking.pad.app.widget.indicator.TabPageIndicator
                android:id="@+id/indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <include layout="@layout/layout_line" />

            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>