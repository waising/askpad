<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.asking.pad.app.widget.AskSimpleDraweeView
            android:id="@+id/ad_avatar"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_marginBottom="@dimen/space_22"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginTop="@dimen/space_22"
            app:backgroundImage="@color/main_bg"
            app:roundAsCircle="true" />

        <TextView
            android:id="@+id/tv_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_22"
            android:layout_marginTop="@dimen/space_35"
            android:layout_toRightOf="@+id/ad_avatar"
            android:text="[初中数学]"
            android:textColor="#fd8767"
            android:textSize="@dimen/textSize_16" />

        <TextView
            android:id="@+id/tv_teacher_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_class"
            android:layout_toRightOf="@+id/tv_class"
            android:text="萌酱老师"
            android:textColor="@color/text_color_4"
            android:textSize="@dimen/textSize_16" />


        <TextView
            android:id="@+id/tv_fans_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_class"
            android:layout_below="@+id/tv_teacher_name"
            android:layout_marginTop="@dimen/space_10"
            android:text="粉丝数：123"
            android:textColor="@color/text_color_4"
            android:textSize="@dimen/textSize_16" />

        <ImageView
            android:id="@+id/iv_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_34"
            android:background="@drawable/selector_attention" />


    </RelativeLayout>


    <View style="@style/view_horizontal_line" />


    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
