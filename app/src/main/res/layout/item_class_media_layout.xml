<?xml version="1.0" encoding="utf-8"?>
<com.asking.pad.app.widget.FoursquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="@dimen/space_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/space_10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/bg_corners_stroke4"
                android:padding="@dimen/space_1">

                <ImageView
                    android:id="@+id/iv_temp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/colorText_56"
                    android:textSize="@dimen/textSize_20"/>

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/oto_waiting_t1"
                    android:textSize="@dimen/textSize_20"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/space_10"
                android:layout_weight="1"
                android:textColor="@color/colorText_88"
                android:textSize="@dimen/textSize_16"/>

            <TextView
                android:id="@+id/tv_pay"
                style="@style/btn_or_fill_style"
                android:layout_marginTop="@dimen/space_10"
                android:text="立即购买"/>

            <TextView
                android:id="@+id/tv_study"
                style="@style/btn_blue_fill_style"
                android:layout_marginTop="@dimen/space_10"
                android:text="开始学习"/>

            <FrameLayout
                android:id="@+id/fl_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_progress_horizontal"
                android:layout_marginTop="@dimen/space_10">

                <ProgressBar
                    android:id="@+id/stu_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:indeterminateOnly="false"
                    android:max="100"
                    android:progress="50"
                    android:progressDrawable="@drawable/progress_horizontal_green"/>

                <TextView
                    android:id="@+id/tv_progress"
                    style="@style/btn_blue_fill_style"
                    android:background="@null"
                    android:layout_gravity="center"/>
            </FrameLayout>

            <TextView
                android:id="@+id/tv_price_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                android:gravity="center"
                android:textColor="@color/lightgray"
                android:textSize="@dimen/textSize_12"/>
        </LinearLayout>


    </android.support.v7.widget.CardView>

</com.asking.pad.app.widget.FoursquareRelativeLayout>