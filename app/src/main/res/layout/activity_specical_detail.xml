<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50"
        android:background="@color/login_gomain"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_50"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_20"
                    android:drawableLeft="@mipmap/ic_specical_tit_flag"
                    android:drawablePadding="@dimen/space_5"
                    android:gravity="center"
                    android:text="专题详情"
                    android:textColor="@color/colorText_88"
                    android:textSize="@dimen/textSize_18"/>

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_avatar"
                            android:layout_width="@dimen/space_80"
                            android:layout_height="@dimen/space_80"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_10"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_teaname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="丸子老师"
                                android:textColor="@color/colorText_44"
                                android:textSize="@dimen/textSize_14"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/space_10"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_subname"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="【七年级-数学】"
                                    android:textColor="#fd8767"
                                    android:textSize="@dimen/textSize_14"/>

                                <TextView
                                    android:id="@+id/tv_subtime"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/space_10"
                                    android:layout_weight="1"
                                    android:text="2017-04-12 15:00"
                                    android:textColor="@color/colorText_88"
                                    android:textSize="@dimen/textSize_14"/>

                                <TextView
                                    android:id="@+id/tv_favor_num"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableLeft="@drawable/ic_favor_selector"
                                    android:drawablePadding="@dimen/space_5"
                                    android:textColor="@color/colorText_88"/>

                                <TextView
                                    android:id="@+id/tv_visitnum"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/space_10"
                                    android:text="游览123"
                                    android:textColor="@color/colorText_88"
                                    android:textSize="@dimen/textSize_14"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_10"
                        android:text="巧解三角函数专题"
                        android:textColor="@color/colorText_44"
                        android:textSize="@dimen/textSize_20"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/space_10"
                        android:layout_marginTop="@dimen/space_10"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="老师在线答疑时间："
                            android:textColor="@color/colorText_88"
                            android:textSize="@dimen/textSize_14"/>

                        <TextView
                            android:id="@+id/tv_statetime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2017年4月12日 19:00——21:00"
                            android:textColor="#fd8767"
                            android:textSize="@dimen/textSize_14"/>
                    </LinearLayout>

                    <include layout="@layout/layout_line"/>

                    <com.asking.pad.app.widget.MultiStateView
                        android:id="@+id/load_View"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/space_10"
                        android:background="@color/white"
                        app:msv_emptyView="@layout/state_empty"
                        app:msv_errorView="@layout/state_error"
                        app:msv_loadingView="@layout/state_loading"
                        app:msv_viewState="content">

                        <com.asking.pad.app.widget.AskMathView
                            android:id="@+id/content_mathview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </com.asking.pad.app.widget.MultiStateView>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <View
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:background="@color/login_line"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>